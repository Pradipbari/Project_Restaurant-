<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu - Burger House</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <style>
      body {
        margin: 0;
        font-family: "Montserrat", sans-serif;
        background: #fff8f0;
        color: #333;
      }

      .menu-section {
        padding: 20px;
        background-color: #fff8f0;
        text-align: center;
        margin-top: 100px;
      }

      .menu-title {
        font-size: 2rem;
        margin-bottom: 20px;
      }

      .menu-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        justify-content: center;
        padding: 10px;
      }

      .box {
        position: relative;
        margin-top: 2rem;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 0.5rem;
        box-shadow: 0 2px 4px rgb(4 64 54/10%);
        padding: 5px;
        transition: 0.5s;
      }
      .box-img {
        width: 300px;
        height: 300px;
      }
      .box-img img {
        height: 100%;
        width: 100%;
        object-fit: contain;
        object-position: center;
      }
      .box h2 {
        font-size: 1.2rem;
      }

      .box h3 {
        font-size: 1rem;
        font-weight: 400;
        margin: 4px 0 10px;
      }

      .box p {
        font-size: var(--p-font);
        font-weight: 500;
      }

      .box:hover {
        transform: scale(1.03);
      }

      .menu-card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }

      .menu-card h3 {
        font-size: 1.2rem;
        margin: 10px 0;
        color: #333;
      }

      .price {
        font-size: 1rem;
        color: orange;
      }

      .buy-btn {
        background-color: #d33;
        color: white;
        border: none;
        padding: 10px 20px;
        margin-bottom: 15px;
        border-radius: 20px;
        cursor: pointer;
        text-decoration: none;
      }

      .buy-btn:hover {
        background-color: #b22;
      }
      header {
        position: fixed;
        top: 0;
        width: 100%;
        right: 0;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: white;

        box-shadow: 0 0.5rem 50rem rgba(0, 0, 0, 0.1);
      }
      .logo {
        width: 100px;
        height: 100px;
        padding-left: 90px;
      }
      .goHome {
        padding-right: 90px;
        text-decoration: none;
        color: #080000;
      }
      .goHome:hover {
        color: #fd026b;
      }
      .orderNow {
        padding: 5px 10px;
        border: none;
        border-radius: 10px;
        background-color: #fd026b;
        color: white;
        margin-bottom: 15px;
      }
      .orderNow:hover {
        background-color: #fe3f8e;
      }
      /* Responsive one-column fallback for very small screens */
      @media (max-width: 480px) {
        .menu-grid {
          grid-template-columns: 1fr;
        }
        header {
          padding: 14px 141px;
        }
      }
      @media (max-width: 921px) {
        header {
          padding: 14px 41px;
        }
      }
      @media (max-width: 715px) {
        header {
          padding: 10px 16px;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <div><img class="logo" src="\images\logo.jpg" alt="" /></div>

      <a class="goHome" href="/">Home</a>
    </header>
    <section class="menu-section">
      <h2 class="menu-title">Our Signature Burgers</h2>
      <div class="menu-grid">
        <% foodItems.forEach(item => { %>
        <div class="box">
          <div class="box-img">
            <img src="<%= item.imageUrl %>" alt="" />
          </div>
          <h2><%= item.itemName %></h2>
          <p class="price">â‚¹<%= item.price %></p>

          <form action="/order-form/<%= item.id %>" method="get">
            <input type="hidden" name="id" value="<%= item.id %>" />
            <button class="buy-btn" type="submit">Order Now</button>
          </form>
        </div>
        <% }) %>
      </div>
    </section>

